<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>If the market segment is GOVERNMENT FEDERAL and the Federal checkbox is unchecked, then the opportunity record will be updated to check the Federal checkbox.</description>
    <environments>Default</environments>
    <interviewLabel>[Opportunity] Federal Market Segment Checks Federal Checkbox {!$Flow.CurrentDateTime}</interviewLabel>
    <label>[Opportunity] Federal Market Segment Checks Federal Checkbox</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Check_Federal_Box</name>
        <label>Check Federal Box</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <inputAssignments>
            <field>Federal__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_Federal_Box</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Market_Segment__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>GOVERNMENT FEDERAL</stringValue>
            </value>
        </filters>
        <filters>
            <field>Federal__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
