    </start>
    <status>Active</status>
    <textTemplates>
        <name>Email_Body_Accept</name>
        <isViewedAsPlainText>false</isViewedAsPlainText>
        <text>&lt;p&gt;Hello {!$Record.Opportunity__r.Owner.FirstName},&lt;/p&gt;&lt;p&gt;{!$Record.Partner__r.Name} has accepted your invitation to participate in {!$Record.Opportunity__r.Name}. Please create a child opportunity and assign it to {!$Record.Partner__r.Sales_Leader_EPP_Contact__r.FirstName} {!$Record.Partner__r.Sales_Leader_EPP_Contact__r.LastName}.&lt;/p&gt;&lt;ul&gt;&lt;li&gt;&lt;a href=&quot;{!Record_Link}&quot; rel=&quot;noopener noreferrer&quot; target=&quot;_blank&quot;&gt;Link to Opportunity&lt;/a&gt;&lt;/li&gt;&lt;/ul&gt;</text>
    </textTemplates>
    <textTemplates>
        <name>Email_Body_Reject</name>
        <isViewedAsPlainText>false</isViewedAsPlainText>
        <text>&lt;p&gt;Hello {!$Record.Opportunity__r.Owner.FirstName},&lt;/p&gt;&lt;p&gt;{!$Record.Partner__r.Name} has rejected your invitation to participate in {!$Record.Opportunity__r.Name}. You will find the reason provided below. Please re-run the Find Cross-Sell Partner process again to invite additional partners to participate as needed.&lt;/p&gt;&lt;ul&gt;&lt;li&gt;Reason for Rejection: {!$Record.Reject_Reason__c}&lt;/li&gt;&lt;/ul&gt;</text>
    </textTemplates>
