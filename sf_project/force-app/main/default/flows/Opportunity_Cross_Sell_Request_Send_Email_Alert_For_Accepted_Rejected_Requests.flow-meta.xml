    <assignments>
        <name>Set_Email_Recipients</name>
        <label>Set Email Recipients</label>
        <locationX>314</locationX>
        <locationY>323</locationY>
        <assignmentItems>
            <assignToReference>Email_Recipients</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>$Record.Opportunity__r.Owner.Email</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Accepted_or_Rejected</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Accepted_or_Rejected</name>
        <label>Accepted or Rejected?</label>
        <locationX>314</locationX>
        <locationY>431</locationY>
        <defaultConnectorLabel>Other</defaultConnectorLabel>
        <rules>
            <name>Accepted</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Accepted</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Accepted_Email</targetReference>
            </connector>
            <label>Accepted</label>
        </rules>
        <rules>
            <name>Rejected</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Rejected</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Rejected_Email</targetReference>
            </connector>
            <label>Rejected</label>
        </rules>
    </decisions>
    <description>When a Opportunity Cross-Sell Request is either accepted or rejected, send an email alert to the Prime Opportunity Owner</description>
    <environments>Default</environments>
    <formulas>
        <name>Email_Subject</name>
        <dataType>String</dataType>
        <expression>{!$Record.Partner__r.Name} &amp; &quot; has &quot; &amp; TEXT({!$Record.Status__c}) &amp; &quot; your invitation to participate in &quot; &amp; {!$Record.Opportunity__r.Name}</expression>
    </formulas>
    <formulas>
        <name>Record_Link</name>
        <dataType>String</dataType>
        <expression>LEFT($Api.Partner_Server_URL_580, FIND(&apos;/services&apos;, $Api.Partner_Server_URL_580)) &amp; {!$Record.Opportunity__r.Id}</expression>
    </formulas>
    <interviewLabel>[Opportunity Cross-Sell Request] Send Email Alert For Accepted/Rejected Requests {!$Flow.CurrentDateTime}</interviewLabel>
    <label>[Opportunity Cross-Sell Request] Send Email Alert For Accepted/Rejected Requests</label>
